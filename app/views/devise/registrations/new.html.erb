	
<div class="span4">&nbsp;
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
  <%= devise_error_messages! %>
  
  <fieldset>
	  
	  <legend>Sign Up</legend>
  <div class="signin-width-input"><%= f.input :first_name %><br /></div>

  <div class="signin-width-input"><%= f.input :last_name %><br /></div>
  
  <div class="signin-width-input"><%= f.input :profile_name %><br /></div>
	  

		  <div class="signin-width-input"><%= f.input :email %><br /></div>
		
		  <div class="signin-width-input"><%= f.input :password %><br /></div>

  <div class="signin-width-input"><%= f.input :password_confirmation %><br /></div>

  <div><%= f.button :submit, "Sign up" %></div>
  

  <div><br /><%= render "devise/shared/links" %></div>
  </fieldset>
<% end %>
</div>

