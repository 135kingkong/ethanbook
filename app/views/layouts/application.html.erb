<!DOCTYPE html>
<html>
<head>
  <title>Ethanbook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="/vendor/assets/javascripts/jquery-migrate-1.2.1.js"></script>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, inititial-scale=1.0, user-scalable=no" />
</head>
<body <% if user_signed_in? %>class="paddingmobile"<% end %> >
	
	<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
	  <!-- Brand and toggle get grouped for better mobile display -->
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	    <a class="navbar-brand" href="<%= root_path %>">EthanBook</a>
		
	  </div>

	  <!-- Collect the nav links, forms, and other content for toggling -->
	  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    <ul class="nav navbar-nav">
    	      <li class="<%= 'active' if current_page?(root_path) or current_page?(feed_path) or current_page?(statuses_path) %>"><%= link_to "Feed", root_path %></li>

    	      
	          
	        </ul>
	   
	    <form class="navbar-form navbar-left" role="search">
		
	      <div class="form-group">
			  <div class="searchbar">
			 	<input type="text" class="form-control" placeholder="Search for people, places and things">
			   </div>
	      </div>
		  	<button type="submit" class="btn btn-default">Search</button>	
	    </form>
	    <ul class="nav navbar-nav navbar-right">
  	     	<% if user_signed_in? %>
		 
		 		<li><%= link_to current_user.full_name, profile_path(current_user.profile_name) %></li>
  	     		<li><%= link_to "Settings", edit_user_registration_path %></li>
				<li class="rightnav"><%= link_to "Log Out", logout_path %></li>
			<% else %>
				
				<li><%= link_to "Register", register_path %></li>
				<li class="rightnavx2"><%= link_to "Sign In", sign_in_path %></li>
			
	      	<% end %>
	    </ul>
	  </div><!-- /.navbar-collapse -->
	</nav>
	
	<div class="container">
		
		<% flash.each do |type, message| %><br />
			<div class="alert <%= flash_class type %>">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= message %>
			</div>
			
			
		<% end %>
		
		<%= yield %>
	</div>
	
	
</body>
</html>
